{
	"private": true,
	"scripts": {
		"build": "parcel build",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"watch": "parcel watch --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"unicorn/prefer-top-level-await": "off"
		}
	},
	"stylelint": {
		"extends": [
			"stylelint-config-xo",
			"stylelint-config-prettier"
		],
		"rules": {
			"function-whitespace-after": null,
			"media-feature-range-operator-space-after": null,
			"media-feature-range-operator-space-before": null
		}
	},
	"dependencies": {
		"webext-base-css": "^1.4.3",
		"webext-options-sync": "^4.2.1"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.12.1-canary.3290",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.0-canary.1665",
		"stylelint": "^15.11.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-xo": "^0.22.0",
		"xo": "^0.56.0"
	},
	"targets": {
		"default": {
			"source": "source/manifest.json",
			"distDir": "./distribution"
		}
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"startUrl": [
				"https://github.com/fregante/browser-extension-template"
			]
		}
	}
}
