{
	"private": true,
	"scripts": {
		"build": "parcel build source/manifest.json --no-content-hash --no-optimize --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "xo",
		"release:chrome": "cd distribution && webstore upload --auto-publish",
		"release:firefox": "cd distribution && web-ext-submit",
		"test": "run-s lint:* build",
		"watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser"
		],
		"globals": [
			"browser"
		],
		"ignores": [
			"distribution"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"webext-options-sync": "^0.21.2",
		"webextension-polyfill": "^0.4.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.0.0-nightly.2220",
		"@parcel/transformer-html": "^2.0.0-nightly.598",
		"@parcel/transformer-posthtml": "^2.0.0-nightly.598",
		"@parcel/transformer-webextension": "^2.0.0-nightly.2220",
		"chrome-webstore-upload-cli": "^1.2.0",
		"daily-version": "^0.12.0",
		"dot-json": "^1.1.0",
		"eslint": "^6.1.0",
		"eslint-config-xo": "^0.26.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.0-nightly.596",
		"size-plugin": "^1.2.0",
		"stylelint": "^10.1.0",
		"stylelint-config-xo": "^0.15.0",
		"web-ext": "^4.1.0",
		"web-ext-submit": "^4.1.0",
		"xo": "^0.24.0"
	}
}
